#!/bin/sh

prefix=/home/huangant/myprog/gaminganywhere/deps.android-arm
exec_prefix=/home/huangant/myprog/gaminganywhere/deps.android-arm
exec_prefix_set=no
libdir=/home/huangant/myprog/gaminganywhere/deps.android-arm/lib

usage="\
Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs]"
#usage="\
#Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs] [--static-libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 2.0.12
      ;;
    --cflags)
      echo -I/home/huangant/myprog/gaminganywhere/deps.android-arm/include/SDL2 
      ;;
    --libs)
      echo -L/home/huangant/myprog/gaminganywhere/deps.android-arm/lib  
      ;;
#    --static-libs)
##    --libs|--static-libs)
#      echo -L/home/huangant/myprog/gaminganywhere/deps.android-arm/lib  
#      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
