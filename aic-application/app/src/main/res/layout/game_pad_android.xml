<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true">

    <View
        android:id="@+id/viewMouse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:focusedByDefault="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_margin="@dimen/side2x"
            android:background="@drawable/btn_pad_rect_selector"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="@dimen/ft12" />

        <ImageButton
            android:id="@+id/ibtnShowKeyBoard"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/side2x"
            android:layout_marginEnd="@dimen/side2x"
            android:visibility="gone"
            android:background="@drawable/btn_pad_rect_selector"
            android:padding="@dimen/side1x"
            android:src="@drawable/ic_keyboard_white_24dp" />

        <ImageButton
            android:id="@+id/ibtnShowDPad"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/side2x"
            android:visibility="gone"
            android:background="@drawable/btn_pad_rect_selector"
            android:padding="@dimen/side1x"
            android:src="@drawable/ic_videogame_asset_white_24dp" />

        <Button
            android:id="@+id/btnEsc"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_margin="@dimen/side2x"
            android:background="@drawable/btn_pad_rect_selector"
            android:text="ESC"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/ft12" />
    </LinearLayout>


</RelativeLayout>