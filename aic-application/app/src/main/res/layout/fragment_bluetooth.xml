<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/side1x"
    app:cardElevation="@dimen/side2x"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:strokeColor="@color/white_cc"
    app:strokeWidth="1dp"
    tools:context=".fragment.BluetoothFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_color_primary"
            android:orientation="horizontal"
            android:padding="@dimen/side1x">

            <TextView
                style="@style/text_16_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/side1x"
                android:drawableStart="@drawable/ic_videogame_asset_white_18dp"
                android:drawablePadding="@dimen/side1x"
                android:text="@string/bluetooth_infor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBlueToothEnable"
                style="@style/text_14_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未开启" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutPadEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_head"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:focusedByDefault="true"
            android:orientation="horizontal"
            android:padding="@dimen/side1x">

            <TextView
                android:id="@+id/tvL1"
                style="@style/btn_test"
                android:text="L1" />

            <TextView
                android:id="@+id/tvL2"
                style="@style/btn_test"
                android:layout_marginStart="@dimen/side1x"
                android:layout_toEndOf="@id/tvL1"
                android:text="L2" />

            <TextView
                android:id="@+id/tvLThumb"
                style="@style/btn_test"
                android:layout_marginStart="@dimen/side1x"
                android:layout_toEndOf="@id/tvL2"
                android:text="Thumb L" />

            <TextView
                android:id="@+id/tvR1"
                style="@style/btn_test"
                android:layout_alignParentRight="true"
                android:text="R1" />

            <TextView
                android:id="@+id/tvR2"
                style="@style/btn_test"
                android:layout_marginEnd="@dimen/side1x"
                android:layout_toStartOf="@id/tvR1"
                android:text="R2" />

            <TextView
                android:id="@+id/tvRThumb"
                style="@style/btn_test"
                android:layout_marginEnd="@dimen/side1x"
                android:layout_toStartOf="@id/tvR2"
                android:text="Thumb R" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvSelect"
                    style="@style/btn_test"
                    android:layout_marginEnd="@dimen/side1x"
                    android:text="Select" />

                <TextView
                    android:id="@+id/tvStart"
                    style="@style/btn_test"
                    android:text="Start" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/btn_test_arrow"
                        android:background="@null" />

                    <ImageView
                        android:id="@+id/tvUp"
                        style="@style/btn_test_arrow"
                        android:src="@drawable/ic_keyboard_arrow_up_black_18dp" />

                    <TextView
                        style="@style/btn_test_arrow"
                        android:background="@null" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tvLeft"
                        style="@style/btn_test_arrow"
                        android:src="@drawable/ic_keyboard_arrow_left_black_18dp" />

                    <TextView
                        style="@style/btn_test_arrow"
                        android:background="@null" />

                    <ImageView
                        android:id="@+id/tvRight"
                        style="@style/btn_test_arrow"
                        android:src="@drawable/ic_keyboard_arrow_right_black_18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/btn_test_arrow"
                        android:background="@null" />

                    <ImageView
                        android:id="@+id/tvDown"
                        style="@style/btn_test_arrow"
                        android:src="@drawable/ic_keyboard_arrow_down_black_18dp" />

                    <TextView
                        style="@style/btn_test_arrow"
                        android:background="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvX"
                        style="@style/btn_test"
                        android:layout_marginEnd="@dimen/side1x"
                        android:text="X" />

                    <TextView
                        android:id="@+id/tvY"
                        style="@style/btn_test"
                        android:text="Y" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/side1x"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvA"
                        style="@style/btn_test"
                        android:layout_marginEnd="@dimen/side1x"
                        android:text="A" />

                    <TextView
                        android:id="@+id/tvB"
                        style="@style/btn_test"
                        android:text="B" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/layoutButton"
                android:layout_toEndOf="@id/layoutArrow"
                android:orientation="horizontal"
                android:padding="@dimen/side1x">

                <TextView
                    android:id="@+id/tvPadLeft"
                    style="@style/text_12_black"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/side2x"
                    android:layout_marginEnd="@dimen/side2x"
                    android:background="@drawable/btn_test_oval"
                    android:gravity="center"
                    android:text="left" />

                <TextView
                    android:id="@+id/tvPadRight"
                    style="@style/text_12_black"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/side2x"
                    android:background="@drawable/btn_test_oval"
                    android:gravity="center"
                    android:text="right" />

            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>