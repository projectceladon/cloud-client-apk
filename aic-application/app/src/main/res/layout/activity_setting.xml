<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_e8"
    android:orientation="vertical"
    tools:context=".activity.SettingActivity">

    <include layout="@layout/include_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:id="@+id/layoutLanguage"
        android:padding="@dimen/side2x">

        <TextView
            style="@style/text_16_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_language" />

        <TextView
            android:id="@+id/tvLanguage"
            style="@style/text_14_blue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:drawableEnd="@drawable/ic_arrow_right_black_24dp"
            android:gravity="center_vertical"
            android:text="中文" />
    </FrameLayout>

    <CheckBox
        android:id="@+id/chkShowGetStatus"
        style="@style/text_16_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:button="@null"
        android:drawableEnd="@drawable/chk_selected"
        android:padding="@dimen/side2x"
        android:text="@string/show_log" />

    <EditText
        android:id="@+id/etIP"
        style="@style/text_16_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/side2x"
        android:hint="Config server IP"
        android:text="http://192.168.1.4/" />
</LinearLayout>