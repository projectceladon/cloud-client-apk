<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activity.PlayGameRtcActivity">

    <LinearLayout
        android:id="@+id/layoutRenderBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/fullRenderer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutController"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layoutStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/side4x"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/chkStatusTitle"
            style="@style/text_14_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_alpha"
            android:button="@null"
            android:checked="true"
            android:drawableEnd="@drawable/chk_getstatus_switch"
            android:drawablePadding="@dimen/side2x"
            android:orientation="horizontal"
            android:padding="@dimen/side1x"
            android:text="Show Status" />

        <TextView
            android:id="@+id/tvMyStatus"
            style="@style/text_12_white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black_alpha333"
            android:padding="@dimen/side1x"
            android:shadowColor="@color/black_33"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textFontWeight="1"
            tools:text="output status" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/side2x">

        <TextView
            style="@style/text_12_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black_33"
            android:shadowDx="2"
            android:shadowDy="2"
            android:visibility="gone"
            android:shadowRadius="2"
            android:text="@string/net_delays" />

        <TextView
            android:id="@+id/tvNetDelay"
            style="@style/text_12_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/side2x"
            android:shadowColor="@color/black_33"
            android:shadowDx="2"
            android:shadowDy="2"
            android:visibility="gone"
            android:shadowRadius="2"
            android:text="0.00"/>

        <TextView
            style="@style/text_12_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black_33"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:visibility="gone"
            android:text="@string/current_net_speed" />

        <TextView
            android:id="@+id/tvNetSpeed"
            android:visibility="gone"
            style="@style/text_12_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black_33"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="0"/>
    </LinearLayout>
</FrameLayout>