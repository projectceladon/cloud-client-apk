<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_e8"
    android:orientation="vertical"
    tools:context=".activity.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="@null"
            android:src="@drawable/ic_arrow_back_white_36dp" />

        <EditText
            android:id="@+id/etSearch"
            style="@style/text_14_gray"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/side2x"
            android:background="@drawable/bg_search"
            android:drawableStart="@drawable/ic_search_black_18dp"
            android:drawablePadding="@dimen/side1x"
            android:hint="输入游戏名称或关键字"
            android:paddingStart="@dimen/side1x" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGameList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/side1x"
            android:paddingEnd="@dimen/side1x"
            tools:listitem="@layout/item_game_adapter" />
    </FrameLayout>
</LinearLayout>