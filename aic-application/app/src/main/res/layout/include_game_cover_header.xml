<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5">

    <!--背景图-->
    <ImageView
        android:id="@+id/ivHeaderBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />
    <!--遮罩-->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--状态栏占位-->
        <com.commonlibrary.view.StatusBarHeightView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--标题栏点位-->
        <View
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize" />
        <!--内容区-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/side2x"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivGameCover"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="@dimen/side1x"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingScore"
                    style="@style/RadingStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.5" />
            </LinearLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/side2x"
                android:layout_marginEnd="@dimen/side2x"
                android:stretchColumns="1">

                <TableRow
                    android:layout_marginBottom="1dp"
                    android:background="@color/white_alpha">

                    <TextView
                        style="@style/text_14_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/side0_5x"
                        android:layout_gravity="start"
                        android:text="@string/run_times" />

                    <TextView
                        android:id="@+id/tvRunCount"
                        style="@style/text_14_white"
                        android:layout_width="wrap_content"
                        android:padding="@dimen/side0_5x"
                        android:layout_height="wrap_content"
                        tools:text="0000" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="1dp"
                    android:background="@color/white_alpha">

                    <TextView
                        style="@style/text_14_white"
                        android:padding="@dimen/side0_5x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/cumulative_duration" />

                    <TextView
                        android:id="@+id/tvTotalTime"
                        style="@style/text_14_white"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/side0_5x"
                        tools:text="0000" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="1dp"
                    android:background="@color/white_alpha">

                    <TextView
                        style="@style/text_14_white"
                        android:padding="@dimen/side0_5x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/single_duraction" />

                    <TextView
                        android:id="@+id/tvSingleTime"
                        style="@style/text_14_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/side0_5x"
                        android:gravity="center_vertical"
                        tools:text="0000" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="1dp"
                    android:background="@color/white_alpha">

                    <TextView
                        style="@style/text_14_white"
                        android:padding="@dimen/side0_5x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="@string/last_time" />

                    <TextView
                        android:id="@+id/tvLastTime"
                        style="@style/text_14_white"
                        android:padding="@dimen/side0_5x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0000" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>