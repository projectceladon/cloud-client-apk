<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_margin="@dimen/side2x"
            android:background="@drawable/btn_pad_rect_selector"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="@dimen/ft12" />

        <ImageButton
            android:id="@+id/ibtnShowKeyBoard"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/side2x"
            android:background="@drawable/btn_pad_rect_selector"
            android:padding="@dimen/side1x"
            android:src="@drawable/ic_keyboard_white_24dp" />

        <Button
            android:id="@+id/btnEsc"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/side2x"
            android:background="@drawable/btn_pad_rect_selector"
            android:text="ESC"
            android:textColor="@color/white"
            android:textSize="@dimen/ft12" />

    </LinearLayout>

    <Button
        android:id="@+id/btnL"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/side2x"
        android:background="@drawable/btn_pad_rect_selector"
        android:text="LB"
        android:textColor="@color/white"
        android:textSize="@dimen/ft16" />

    <Button
        android:id="@+id/btnR"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/side2x"
        android:background="@drawable/btn_pad_rect_selector"
        android:elevation="@null"
        android:stateListAnimator="@null"
        android:text="RB"
        android:textColor="@color/white"
        android:textSize="@dimen/ft16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/side2x"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnLeft"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:background="@drawable/btn_pad_oval_selector"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp" />

        <ImageButton
            android:id="@+id/btnRight"
            android:layout_width="60dp"
            android:layout_marginLeft="@dimen/side3x"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:background="@drawable/btn_pad_oval_selector"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/side2x"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="false">

        <Button
            android:id="@+id/btnGas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pad_rect_selector"
            android:scaleType="center"
            android:text="油门"
            android:padding="@dimen/side2x"
            android:layout_marginRight="@dimen/side3x"
            android:textColor="@color/white"
            android:textSize="@dimen/ft18" />

        <Button
            android:id="@+id/btnBrake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_pad_rect_selector"
            android:text="刹车"
            android:padding="@dimen/side2x"
            android:textColor="@color/white"
            android:textSize="@dimen/ft18" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="@dimen/side3x">

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_pad_rect_selector"
            android:elevation="@null"
            android:stateListAnimator="@null"
            android:text="SELECT"
            android:textColor="@color/white"
            android:textSize="@dimen/ft12" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_pad_rect_selector"
            android:elevation="@null"
            android:stateListAnimator="@null"
            android:text="START"
            android:textColor="@color/white"
            android:textSize="@dimen/ft12" />
    </LinearLayout>
</RelativeLayout>