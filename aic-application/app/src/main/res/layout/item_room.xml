<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/side1x"
        android:layout_marginTop="@dimen/side1x"
        android:layout_marginEnd="@dimen/side2x"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_default_header"
        app:layout_constraintEnd_toStartOf="@id/ivIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRoomName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Room name"
        app:layout_constraintBottom_toBottomOf="@id/ivIcon"
        app:layout_constraintEnd_toStartOf="@id/btnJoin"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/ivIcon"
        app:layout_constraintTop_toTopOf="@id/ivIcon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJoin"
        style="@style/text_14_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/side1x"
        android:paddingStart="@dimen/side2x"
        android:paddingTop="@dimen/side1x"
        android:paddingEnd="@dimen/side2x"
        android:paddingBottom="@dimen/side1x"
        android:text="Join"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/side1x"
        android:focusable="true"
        app:layout_constraintBaseline_toBaselineOf="@id/tvRoomName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvRoomName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/side1x"
        android:background="@color/white_cc"
        app:layout_constraintTop_toBottomOf="@id/ivIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>